<%- model_class = Instructor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:First_Name) %></th>
      <th><%= model_class.human_attribute_name(:Last_Name) %></th>
      <th><%= model_class.human_attribute_name(:Gender) %></th>
      <th><%= model_class.human_attribute_name(:Birth_Date) %></th>
      <th><%= model_class.human_attribute_name(:Birth_Place) %></th>
      <th><%= model_class.human_attribute_name(:Phone) %></th>
      <th><%= model_class.human_attribute_name(:Email) %></th>
      <th><%= model_class.human_attribute_name(:Address) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= link_to instructor.id, instructor_path(instructor) %></td>
        <td><%= instructor.First_Name %></td>
        <td><%= instructor.Last_Name %></td>
        <td><%= instructor.Gender %></td>
        <td><%= instructor.Birth_Date %></td>
        <td><%= instructor.Birth_Place %></td>
        <td><%= instructor.Phone %></td>
        <td><%= instructor.Email %></td>
        <td><%= instructor.Address %></td>
        <td><%=l instructor.created_at, :format => :short %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_instructor_path(instructor), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      instructor_path(instructor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
 <div class="form-actions">
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_instructor_path,
            :class => 'btn btn-primary' %>
</div>
