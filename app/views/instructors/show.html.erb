<%- model_class = Instructor -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:First_Name) %>:</strong></dt>
  <dd><%= @instructor.First_Name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Last_Name) %>:</strong></dt>
  <dd><%= @instructor.Last_Name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Gender) %>:</strong></dt>
  <dd><%= @instructor.Gender %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Birth_Date) %>:</strong></dt>
  <dd><%= @instructor.Birth_Date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Birth_Place) %>:</strong></dt>
  <dd><%= @instructor.Birth_Place %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Phone) %>:</strong></dt>
  <dd><%= @instructor.Phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Email) %>:</strong></dt>
  <dd><%= @instructor.Email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Address) %>:</strong></dt>
  <dd><%= @instructor.Address %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              instructors_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_instructor_path(@instructor), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              instructor_path(@instructor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
